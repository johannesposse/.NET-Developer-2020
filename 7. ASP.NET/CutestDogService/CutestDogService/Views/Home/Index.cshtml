@model DogModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dogs!</h1>
</div>

<div class="card" style="width: 30rem; margin: 2rem auto">
    <img class="card-img-top" src="@ViewBag.Img" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Breed: @Model.Breed</p>
        <p class="card-text">Age: @Model.Age</p>
        <p class="card-text">Cuteness: @Model.Cuteness</p>
        @{
            @if (Model.Cuteness == 10)
            {
                <h1 class="card-text">It's the cutest thing ever!!</h1>
            }
        }
        <a asp-controller="Home" asp-action="Congrats" class="btn btn-success btn-block m-1" asp-route-name="@Model.Name">It's so cute! I want i now!</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-danger btn-block m-1">I'm not impressed...</a>
    </div>
</div>