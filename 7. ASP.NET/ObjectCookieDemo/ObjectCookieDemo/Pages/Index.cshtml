@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <label for="name">Name: </label>
    <input type="text" id="name" value="" asp-for="@Model.Surikat.Name" />
    <label for="address">Address: </label>
    <input type="text" id="address" value="" asp-for="@Model.Surikat.StreetAddress" />
    <button class="btn btn-outline-primary">Submit</button>
</form>

@if(Model.CookieSurikater.Any())
            {
                foreach(var surikat in Model.CookieSurikater)
                {
                    <h1>@surikat.Name</h1>
                    <h2>@surikat.StreetAddress</h2>
                }
            
            }

